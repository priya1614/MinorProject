<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#FFFFFF"
    tools:context=".view.FullScreenImageFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/ac_imageview_fullscreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
           />

        <Button
            android:id="@+id/delete_image"
            android:background="#000000"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/ac_imageview_fullscreen"
            app:layout_constraintBottom_toBottomOf="@+id/ac_imageview_fullscreen"
            android:layout_marginBottom="70dp"
            android:layout_marginEnd="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_image">

        </Button>



</androidx.constraintlayout.widget.ConstraintLayout>